<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A8E6A3"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DYSGRAPHIA THERAPY"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:background="@drawable/round_corners"
            android:textColor="#000000"
            android:gravity="center" />

        <!-- Instruction -->
        <TextView
            android:id="@+id/instructionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Unscramble Family Members"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:padding="8dp" />

        <!-- Scrambled Words and Input Fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Block for each scrambled word -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ANTU"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/input1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/round_corners"
                    android:padding="8dp"
                    android:hint="Unscramble here"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SNO"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/input2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/round_corners"
                    android:padding="8dp"
                    android:hint="Unscramble here"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="UCLEN"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/input3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/round_corners"
                    android:padding="8dp"
                    android:hint="Unscramble here"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SESTIR"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/input4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/round_corners"
                    android:padding="8dp"
                    android:hint="Unscramble here"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="METHOR"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/input5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/round_corners"
                    android:padding="8dp"
                    android:hint="Unscramble here"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FRETAH"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/input6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/round_corners"
                    android:padding="8dp"
                    android:hint="Unscramble here"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="BOERTHR"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/input7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/round_corners"
                    android:padding="8dp"
                    android:hint="Unscramble here"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GARANDAP"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/input8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/round_corners"
                    android:padding="8dp"
                    android:hint="Unscramble here"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GRMANDA"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/input9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/round_corners"
                    android:padding="8dp"
                    android:hint="Unscramble here"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

        <!-- Button to check answers -->
        <Button
            android:id="@+id/checkAnswersButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Answers"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:background="@drawable/round_corners"
            android:textColor="#000000"
            android:padding="8dp" />
    </LinearLayout>
</ScrollView>
