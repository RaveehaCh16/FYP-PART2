<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A8E6A3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#A8D5A2"
        android:padding="16dp">

        <!-- Test Title -->
        <Button
            android:id="@+id/testButton"
            android:layout_width="199dp"
            android:layout_height="68dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_corners"
            android:padding="10dp"
            android:text="TEST 2"
            android:textSize="33dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />

        <!-- Instruction -->
        <TextView
            android:id="@+id/instructionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write missing letters."
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:padding="10dp" />

        <!-- Missing Letters Section -->
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:background="@drawable/round_form"
            android:layout_gravity="center">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Row 1: Hen -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="h e _"
                    android:textSize="30sp"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/inputHen"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:hint="_"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/graphia_hen" />
            </LinearLayout>

            <!-- Row 2: Bag -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b _ g"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/inputBag"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:hint="_"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/graphia_bag" />
            </LinearLayout>

            <!-- Row 3: Hat -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="h a _"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/inputHat"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:hint="_"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/graphia_hat" />
            </LinearLayout>

            <!-- Row 4: Sun -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="s _ n"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/inputSun"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:hint="_"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/graphia_sun" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/round_corners"
            android:text="BACK" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="8" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/round_corners"
            android:text="NEXT" />
    </LinearLayout>
</RelativeLayout>



